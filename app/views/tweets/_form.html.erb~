<%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
      <th style="width:200px"><%= f.label :message %></th>
      <th style="width:75px"><%= f.label :location %><br /></th>
    </tr>
    <tr>
      <td><%= f.text_field :message, :style=>'width:200px' %></td>
      <td><%= f.text_field :location, :style=>'width:75px' %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
